<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                
                
    >
    

        <Button
            android:id="@+id/inbox_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terug" 
            android:onClick="terug" 
        />
    
        <TextView
            android:id="@+id/inbox_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginLeft="70dp"
            android:hint="Inbox"
            android:layout_toRightOf="@id/inbox_main"
        />
    
        <Button
            android:id="@+id/inbox_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="mail" 
            android:onClick="email" 
        />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/inbox_mail"
            android:scrollbars="vertical"
        >
            <LinearLayout 
                android:id="@+id/LL_emails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical"
            >
                <Button
                    android:id="@+id/inbox_mail1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read"
                />
    
                <Button
                    android:id="@+id/inbox_mail2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
    
                <Button
                    android:id="@+id/inbox_mail3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
    
                <Button
                    android:id="@+id/inbox_mail4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read"  
                />
    
                <Button
                    android:id="@+id/inbox_mail5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read"  
                />
    
                <Button
                    android:id="@+id/inbox_mail6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
    
                <Button
                    android:id="@+id/inbox_mail7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
    
                <Button
                    android:id="@+id/inbox_mail8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
    
                <Button
                    android:id="@+id/inbox_mail9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
            
                <Button
                    android:id="@+id/inbox_mail10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail" 
                    android:onClick="read" 
                />
            </LinearLayout>
        </ScrollView>
    
    
    
    
    </RelativeLayout>
