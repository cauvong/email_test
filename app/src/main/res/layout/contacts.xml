<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" 
>

    
    <LinearLayout
        android:id="@+id/con_lay01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
    >
        
    
        <TextView 
        android:id="@+id/con_text_voornaam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:hint="voornaam: " 
    />
    <EditText 
        android:id="@+id/con_input_voornaam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:hint="voornaam" 
    />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/con_lay02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0"
        android:orientation="horizontal"
        android:layout_below="@id/con_lay01"
    >
    
 
        <TextView 
        android:id="@+id/con_text_achternaam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:hint="achternm: " 
        />
        <EditText 
        android:id="@+id/con_input_achternaam"
        android:layout_weight="0.5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="achternaam" 
        />
        
        </LinearLayout>
    
    <LinearLayout
        android:id="@+id/con_lay03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/con_lay02"
    >

    
        <TextView 
        android:id="@+id/con_text_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:hint="email: " 
        />
        <EditText 
        android:id="@+id/con_input_email"
        android:layout_weight="0.5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="email" 
        />
    

        
        </LinearLayout>
    
    <LinearLayout
        android:id="@+id/con_lay04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/con_lay03"
    >
    
        <TextView 
        android:id="@+id/con_text_telefoonnummer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        
        android:hint="telenr: " 
        />
        <EditText 
        android:id="@+id/con_input_telefoonnummer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:hint="telefoonnummer" 
        />
    

    </LinearLayout>
    
    
    <Button
        android:id="@+id/con_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="save"
        android:onClick="save"  
    />
    
</RelativeLayout>


